<html>
    <head>
        <meta name="viewport" content="width=device-width" />
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z" crossorigin="anonymous">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
        <link rel="stylesheet" href="/styles/style.css">
    </head>
    <body>
        <div id="container" class='container' style="display: none;">
            <div class="d-flex justify-content-center mt-5">
                <div class="card" style="width: 25rem;">
                    <div class="card-body">
                        <h1 class="display-4 d-flex justify-content-center mb-5">
                            Register
                        </h1>
                        <form id='login-form' onsubmit="return false;">
                            <div class='form-group'>
                                <label htmlFor='email'>Email</label>
                                <input type='email' class='form-control' id='email' placeholder='Enter email' required />
                            </div>
                            <div class='form-group'>
                                <label htmlFor='password'>Password</label>
                                <input type='password' class='form-control' id='password' placeholder='Password' required />
                            </div>
                            <div class='form-group'>
                                <label htmlFor='repeatpassword'>Repeat Password</label>
                                <input type='password' class='form-control' id='repeatpassword' placeholder='Repeat Password' required />
                            </div>
                            <div id="error" class="alert alert-danger" role="alert" style="display: none;"></div>
                            <div class="d-flex justify-content-between mt-4">
                                <button onclick="_.createUserWithEmailAndPassword()" id="login" type='submit' class='btn btn-primary'>
                                    <div id="signUpLoading" class="spinner-border text-light" style="font-size: x-small; height: 1.5rem; width: 1.5rem;" role="status">
                                        <span class="sr-only">Loading...</span>
                                    </div>
                                    <div id="signUpBtn">
                                        Sign Up
                                    </div>
                                </button>
                            </div>
                            <div class="d-flex align-items-center mt-4 mb-4 cinza">
                                <div class="divider"></div> &nbsp; OR &nbsp; <div class="divider"></div>
                            </div>
                            <div class="d-flex justify-content-between">
                                <button onclick="_.authenticationByGoogle()" id="loginWithGoogle" type='button' class='btn btn-light d-flex justify-content-center align-items-center'>
                                    <img src="https://cdn-icons-png.flaticon.com/512/281/281764.png" width="15" height="15">
                                    &nbsp;&nbsp;&nbsp;Login with Google
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
            <div class="d-flex justify-content-center mt-2  mb-5">
                <div class="card" style="width: 25rem;">
                    <div class="card-body">
                        <p class="lead" style="margin-bottom: 0rem;">
                            Have an account? 
                            <a href="/firebase/page/sign-in" class="card-link">sign in</a> 
                        </p>
                    </div>
                </div>
            </div>
            <div class="d-flex justify-content-center mt-2  mb-5">
                <div class="card card-get-app" style="width: 18rem;">
                    <div class="card-body d-flex justify-content-center" style="padding: 0rem;">
                        Get the app
                    </div>
                    <div class="card-body d-flex justify-content-around" style="padding: 0rem;">
                        <img src="https://www.instagram.com/static/images/appstore-install-badges/badge_ios_portuguese-brazilian-pt_br.png/68006a2bb372.png" width="130" height="40">
                        &nbsp;&nbsp;
                        <img src="https://www.instagram.com/static/images/appstore-install-badges/badge_android_portuguese_brazilian-pt_BR.png/2f2a0c05b2f3.png" width="130" height="40">
                    </div>
                </div>
            </div>
            <div class="d-flex justify-content-center mt-2">
                <div class="card card-foot" style="width: 100%;">
                    <div class="card-body d-flex justify-content-center" style="padding: 0rem;">
                        <a href="#" class="card-link card-foot">About</a> 
                        <a href="#" class="card-link card-foot">Help</a> 
                        <a href="#" class="card-link card-foot">API</a>
                        <a href="#" class="card-link card-foot">Privacy</a>
                        <a href="#" class="card-link card-foot">Terms</a>
                        <a href="#" class="card-link">Forgot password?</a>     
                    </div>
                </div>
            </div>
            <div class="d-flex justify-content-center mt-2  mb-5">
                <div class="card card-foot" style="width: 100%;">
                    <div class="card-body d-flex justify-content-center" style="padding: 0rem;">
                        <select class="card-foot">
                            <option value="pt-br">Português (Brasil)</option>
                            <option value="en">English</option>
                        </select>
                        &nbsp;&nbsp;&nbsp;&nbsp;
                        <span class="card-link card-foot">
                            © 2021 Saulo McChelsom
                        </span>     
                    </div>
                </div>
            </div>
        </div>
        <div id="awaits" class='container await'>
            <div class="spinner-border text-primary" style="font-size: medium; height: 3rem; width: 3rem;" role="status">
                <span class="sr-only">Loading...</span>
            </div>
        </div>
    </body>
    <!-- Firebase App (the core Firebase SDK) is always required and must be listed first -->
    <script src="https://www.gstatic.com/firebasejs/8.9.1/firebase-app.js"></script>
    <!-- Add Firebase products that you want to use -->
    <script src="https://www.gstatic.com/firebasejs/8.9.1/firebase-auth.js"></script>
    <!-- firebase Config -->
    <script src='/scripts/environment/environment.dev.js'></script>
    <!-- class -->
    <script src='/scripts/sign-up.js'></script>
</html>