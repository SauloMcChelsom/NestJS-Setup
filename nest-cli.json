{
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "assets": [
      { "include": "**/*.hbs", "outDir": "dist/src", "watchAssets": true }
    ],
    "plugins": [
      {
        "name": "@nestjs/swagger/plugin",
        "options": {
          "classValidatorShim": false,
          "dtoFileNameSuffix": "DTO"
        }
      }
    ]
  },
  "generateOptions": {
    "spec": false
  }
}